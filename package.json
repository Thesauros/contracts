{
  "name": "rebalance-lending-vaults",
  "scripts": {
    "compile": "npx hardhat compile",
    "test:mocking": "npx hardhat test test/mocking/*.ts",
    "test:forking": "npx hardhat test test/forking/arbitrum/*.ts && npx hardhat test test/forking/avalanche/*.ts",
    "coverage": "npx hardhat coverage",
    "monitor:vaults": "npx hardhat run scripts/monitor-vaults.ts --network arbitrumOne",
    "monitor:apy-simple": "npx hardhat run scripts/monitor-apy-simple.ts --network arbitrumOne",
    "monitor:apy-real": "npx hardhat run scripts/monitor-apy-real.ts --network arbitrumOne",
    "show:addresses": "npx hardhat run scripts/show-addresses.ts --network arbitrumOne",
    "update-config": "node scripts/update-config.js",
    "ui:dev": "cd monitoring-ui && npm run dev",
    "ui:start": "cd monitoring-ui && npm start"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/merkle-tree": "^1.0.7",
    "dotenv": "^16.4.4",
    "hardhat": "^2.26.3",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-deploy-ethers": "^0.4.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0"
  }
}
